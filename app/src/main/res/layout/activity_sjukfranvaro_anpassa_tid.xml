<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sjukfranvaro_anpassaTid">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/icons_layout_sjukfranvaro_anpassaTid"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/layout_distans_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <Button
                    android:id="@+id/back_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Tillbaka"
                    android:textAlignment="textStart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/mini_profile_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/mini_profile_icon"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/notification_button"
                    app:layout_constraintStart_toEndOf="@+id/back_to_start_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_action_name"
                    tools:ignore="SpeakableTextPresentCheck" />
                <ImageButton
                    android:id="@+id/notification_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/mini_profile_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@android:drawable/ic_popup_reminder" />
            </LinearLayout>
        </LinearLayout>


        <EditText
            android:id="@+id/layout_sjukfranvaro_anppasTid_label"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:clickable="false"
            android:editable="false"
            android:text="Sjukfrånvaro\n Anpassad tid"
            android:background="@color/green1"
            android:textAlignment="center"
            android:textColor="#0C0C0C"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/layout_verification_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icons_layout_distans"
            />
        <EditText
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/sjukfranvaro_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="25dp"
            ></EditText>
        <EditText
            android:id="@+id/startDatum_sjuk"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Välj start Datum: "
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColorHint="@color/green1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            tools:ignore="InvalidId"
            android:inputType="date" />
        <EditText
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/StartTime_sjuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Välj start tid:"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColorHint="@color/green1"
            android:inputType="time"
            ></EditText>
        <TimePicker
            android:id="@+id/StarttimePicker_sjuk"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:timePickerMode="spinner"
            android:visibility="gone"/>
        <EditText
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/sjukfranvaro_slut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stopp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="25dp"
            ></EditText>

        <EditText
            android:id="@+id/slutDatum_sjuk"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Välj slut Datum: "
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColorHint="@color/green1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            tools:ignore="InvalidId"
            android:inputType="date" />
        <EditText
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/endTime_sjuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Välj slut tid:"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColorHint="@color/green1"
            android:inputType="time"
            ></EditText>

        <TimePicker
            android:id="@+id/endTimePicker_sjuk"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:timePickerMode="spinner"
            android:visibility="gone"/>
        <EditText
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/sjukfranvaro_kalender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kalender"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="25dp"
            >
        </EditText>
        <EditText
            android:id="@+id/sjukfranvaro_intern_Meddelande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Meddelande (intern)"
            android:inputType="text"
            android:textSize="25dp"
            >
        </EditText>

        <EditText
            android:id="@+id/sjukfranvaro_extern_Meddelande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Meddelande (extern)"
            android:inputType="text"
            android:textSize="25dp"
            >
        </EditText>
        <Button
            android:id="@+id/sjuk_ok_Button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#0C0C0C"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="OK"
            android:background="@color/green1"/>

    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>